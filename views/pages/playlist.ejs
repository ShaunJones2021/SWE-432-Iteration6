<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/06fcb987e4.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>

<body>
    <%- include('../partials/sidebar.ejs') %>
        <main class="main-container">
            <nav class="topbar">
                <%- include('../partials/prev-next-btn.ejs') %>
                    <div class="searchBar">
                        <form style=" display: inline-flex" action="/playlist" method="post">
                            <input id="searchType" type="text" name="search" placeholder="Put in time: 12:00...">
                            <input type="submit" hidden />
                        </form>

                    </div>
                    <%- include('../partials/topnav.ejs') %>
            </nav>
            <section class="content-container">
                <p> Playlist </p>
                <div class="home-container">

                    <% playlistResults.forEach(list => { %>
                        <a href="/playlist/<%= list.id %>">
                            <div class="home-item">
                                <img src="<%= list.playlist_image %>">
                                <h4>
                                    <%= list.name %>
                                </h4>
                                <p>
                                    <%= list.startHour %> to <%= list.endHour %>
                                </p>
                            </div>
                        </a>
                    <% }); %>
                </div>

            </section>
        </main>
</body>

</html>